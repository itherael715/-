<Label>:
	color: 0, 0, 0, 1
    font_name: 'DroidSansFallback.ttf'
	font_size: 20
	
Input_Box_Layout:

<Input_Box_Layout>:
    orientation: "vertical"
    padding: 10
	spacing: 10
	button: ok
	label: geo
	text_input: to
 
    BoxLayout:
        orientation: "horizontal"
        height: 10
 
        BoxLayout:
            orientation: "horizontal"
            size_hint_x: .35

            Label:
                text: "現在位置："
                color: 0, 0, 0, 1
                size_hint_x: .2

            Label:
                text: "台中市西屯區台灣大道四段1727號"
                color: 0, 0, 0, 1
                size_hint_x: .4
			Label:
                text: ""
                color: 1, 1, 1, 1
                size_hint_x: .4

	BoxLayout:
		orientation: "horizontal"
		height: 10
		
		Label:
			text: "目的地："
			color: 0, 0, 0, 1
			size_hint_x: .4

		Label:
			text: "台中市"
			color: 0, 0, 0, 1
			size_hint_x: .4

		TextInput:
			id: to
			size_hint_y: .7
			multiline: True
			font_name: 'DroidSansFallback.ttf'
			
		Button:
			text: "前往"
			id: ok
			size_hint_x:.4
			on_press: geo.text = to.text

	BoxLayout:
		padding: 10
		orientation: "horizontal"
		Label:
			id: geo
			size_hint_x: .7
			font_name: 'DroidSansFallback.ttf'
 
    BoxLayout:
    BoxLayout:
    BoxLayout:
    BoxLayout:
